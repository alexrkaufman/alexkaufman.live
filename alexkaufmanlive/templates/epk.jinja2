<!doctype html>
<html lang="en">
<head>
{% block head %}
    <title>{% block title %}{{ site_name }}{% endblock %}</title>
    <meta charset="UTF-8" />
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=5"
    />
    <link rel="canonical" href="https://alexkaufman.live" />
    <meta
        name="description"
        content="{{ tagline }}"
    />
    <link
        rel="stylesheet"
        href="{{ url_for('static', filename='style.css') }}"
    />
    <style>
    body {
        padding: 0px;
    }
    @page {
        size: letter;
        margin: 0.25in;
    }

    .page { break-after: page; }

    main {
        border: 0px;
        margin: 0px;
    }

    .page {
        min-height: 9.5in
        margin: 0;
    }

    .page-content {
        margin: 0.25in 0;
        border: 1px solid var(--link-color);
        padding: 30px;
        background-color: var(--background-color);
    }

    .page-break {
        height: 0.25in; /* Creates space at top of next page */
    }

    @media print {
        .hero-image-container img {
            transform: scale(2) translateX(0%) translateY(20%) !important;
        }
    }
    </style>
    <script src="https://kit.fontawesome.com/33483263d1.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20100%20100'%3E%3Ctext%20y='.9em'%20font-size='90'%3EðŸŽ¤%3C/text%3E%3C/svg%3E">
{% endblock %}
</head>
<body class="{{ page_class }}">
    <main>
        {% block main %}
            {{ content }}
        {% endblock %}
    </main>
</body>
</html>
